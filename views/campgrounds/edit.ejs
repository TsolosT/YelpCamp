<% include ../partials/header %>
<div class="container mt-4">
    <section class="column">
        <h1 style="text-align:center;">Edit The Campground : <%= campground.name %> </h1>
        <div class="form-box "">
            <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" type="text" name="campground[name]"  value="<%=campground.name%>">
                </div>
                <div class="form-group">
                        <label for="price">Cost   &#36;/night  </label>
                        <input class="form-control" type="text" name="campground[price]" min="0.01" step="0.01" value="<%=campground.price%>">
                    </div>
                    <div class=" input-group mb-3">
                            <div class="custom-file">
                                 <input type="file" class="custom-file-input" id="image" name="image" accept="image/*"  required>
                                 <label class="custom-file-label" for="image">Choose an campground image</label>
                           </div>
                   </div>
                <div class="form-group">
                        <label for="location">Camground Location</label>
                        <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                    </div>
                <div class="form-group">
                    <label for="description">Campground Description</label>
                    <input class="form-control" type="text" name="campground[description]"  value="<%=campground.description%>">
                </div>
                <button class="btn btn-lg btn-primary btn-block mb-3">Save Changes!</button>
            </form>
            <a href="/campgrounds/<%=campground._id%>">Go Back</a>
        </div>
    </section>
</div>
<% include ../partials/footer %>
