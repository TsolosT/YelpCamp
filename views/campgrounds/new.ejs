<% include ../partials/header %>
<div class="container">
    <section class="column mt-4">
        <h1 style="text-align:center;">Create a new Campground</h1>
        <div class="form-box ">
            <form action="/campgrounds" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Enter a name for campground" required>
                </div>
                <div class="form-group">
                        <label for="price">Cost   &#36;/night  </label>
                        <input class="form-control" type="number" name="price" placeholder="0.00" min="0.01" step="0.01" required>
                    </div>
                <div class=" input-group mb-3">
                         <div class="custom-file">
                              <input type="file" class="custom-file-input" id="image" name="image" accept="image/*"  required>
                              <label class="custom-file-label" for="image">Choose an campground image</label>
                        </div>
                </div>
                <div class="form-group">
                        <label for="location">Camground Location</label>
                        <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA"> 
                    </div>
               <div class="form-group">
                   <label for="description">Campground Description</label>
                     <input class="form-control" type="text" name="description" placeholder="Lorem ipsum ...." required>
                </div>
                <button class="btn btn-lg btn-outline-info btn-block mb-3">Submit Campground!</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </section>

</div>


<% include ../partials/footer %>
