<% include ../partials/header %>
<div class="container">
    <section class="col-md-12 my-4 ">
        <h1 style="text-align:center;">Edit your profile</h1>
        <hr>
        <div class="form-box ">
            <form action="/users/<%=user._id%>?_method=PUT" method="post" enctype="multipart/form-data">
                 <div class="form-group">
                     <label for="firstName">First Name</label>
                    <input type="text" class="form-control" name="firstName" value="<%=user.firstName%>">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" name="lastName" value="<%=user.lastName%>">
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" name="email" value="<%=user.email%>">
                </div>
                <div class="input-group mb-3">
                    <div class="custom-file">
                         <input type="file" class="custom-file-input" id="image" name="image" accept="image/*">
                         <label class="custom-file-label" for="image">Upload Profile Image</label>
                   </div>
                </div>
           <div class="form-group">
                <label for="text">Description</label>
                <input type="text" class="form-control" name="description" value="<%=user.description%>">
            </div>  
                <button class="btn btn-lg btn-success btn-block mb-3">Save Changes</button>
            </form>
            <p>
                <a href="/campgrounds">Back</a> 
            </p>
          
        </div> <!--End of div-box-->
   </section>        
</div> <!--End of container-->

<% include ../partials/footer %>
